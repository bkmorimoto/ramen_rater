<h3>New Ramen</h3>
<%= form_for ramen, html: {class: 'horizontal-form'} do |f| %>
  <div class='form-group row'>
    <%= f.label :name, class: 'col-lg-2 control-label' %>
    <div class='col-lg-10'>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label 'restaurant_id', class: 'col-lg-2 control-label' %>
    <div class='col-lg-10'>
      <select class='form-control' name='ramen[restaurant_id]' id='ramen_restaurant_id'>
        <% @restaurants.each do |restaurant| %>
          <option value=<%= restaurant.id %>> <%= restaurant.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :description, class: 'col-lg-2 control-label' %>
    <div class='col-lg-10'>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :price, class: 'col-lg-2 control-label' %>
    <div class='col-lg-10'>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group row'>
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Add' %>
    </div>
  </div>
<% end %>