<h3>Add a post</h3>
<%= form_for post, html: {class: 'horizontal-form'} do |f| %>
  <div class='form-group row'>
    <%= f.label 'ramen_id', class: 'col-lg-2 control-label' %>
    <div class='col-lg-10'>
      <select class='form-control' name='post[ramen_id]' id='post_ramen_id'>
        <% @ramens.each do |ramen| %>
          <option value=<%= ramen.id %>> <%= ramen.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label 'rating', class: 'col-lg-2 control-label' %>
    <div class='col-lg-10'>
      <label class="radio-inline">
        <input type="radio" class='rating-radio' name='post[rating]' id="inlineRadio1" value="1"> 1
      </label>
      <label class="radio-inline">
        <input type="radio" class='rating-radio' name='post[rating]' id="inlineRadio2" value="2"> 2
      </label>
      <label class="radio-inline">
        <input type="radio" class='rating-radio' name='post[rating]' id="inlineRadio3" value="3"> 3
      </label>
      <label class="radio-inline">
        <input type="radio" class='rating-radio' name='post[rating]' id="inlineRadio4" value="4"> 4
      </label>
      <label class="radio-inline">
        <input type="radio" class='rating-radio' name='post[rating]' id="inlineRadio5" value="5"> 5
      </label>
      <label class="radio-inline">
        <input type="radio" class='rating-radio' name='post[rating]' id="inlineRadio6" value="6"> 6
      </label>
    </div>
  </div>
  <div class='form-group row'>
    <%= f.label :description, class: 'col-lg-2 control-label' %>
    <div class='col-lg-10'>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group row'>
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Post' %>
    </div>
  </div>
<% end %>